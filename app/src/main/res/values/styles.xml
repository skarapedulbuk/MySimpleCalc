<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewStyle" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_margin">@dimen/textMargin</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/textViewTextColor</item>
    </style>

    <style name="BigButton" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:backgroundTint">@color/textViewTextColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>